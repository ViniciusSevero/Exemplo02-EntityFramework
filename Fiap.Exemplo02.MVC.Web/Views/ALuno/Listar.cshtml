@model List<Fiap.Exemplo02.MVC.Web.Models.Aluno>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar Alunos</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm("Buscar", "Aluno", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row">
        <div class="col-md-3">
            @Html.TextBox("nomeBusca", "", new { @class = "form-control", placeholder = "Digite um nome" })
        </div>
        <div class="col-md-3">
            @Html.DropDownList("idGrupo", ViewBag.grupos as SelectList, "Selecione um Grupo", new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-primary" value="Buscar" />
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Data Nascimento</th>
        <th>Bolsa</th>
        <th>Desconto</th>
        <th>Grupo</th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.DataNascimento</td>
            <td>@(item.Bolsa?"Sim":"Não")</td>
            <td>@item.Desconto</td>
            <td>@item.Grupo.Nome</td>
            <td>
                <input type="button" value="Excluir" class="btn btn-danger" data-toggle="modal" data-target="#myModal" onclick="passarID(@item.Id)" />
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id = @item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

@Html.Partial("_ModalConfirmacao")

