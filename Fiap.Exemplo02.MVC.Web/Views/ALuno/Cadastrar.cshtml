@using Fiap.Exemplo02.MVC.Web.Models
@model Aluno

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Aluno</h2>

@if(ViewBag.msg != null)
{
    <div class="alert alert-success">
        @ViewBag.msg
    </div>
}

@using (@Html.BeginForm())
{
  
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.Nome)
                @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.Bolsa)
                @Html.TextBoxFor(a => a.Bolsa, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.DataNascimento)
                @Html.TextBoxFor(a => a.DataNascimento, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.Desconto)
                @Html.TextBoxFor(a => a.Desconto, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>

    <input type="submit" value="Enviar" class="btn btn-primary" />
}

